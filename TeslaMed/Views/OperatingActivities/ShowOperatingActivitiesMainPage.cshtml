@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="container mt-5">
    <h2 class="text-center">@Localizer["Title"]</h2>
    <div>
        <ul class="list-group list-group-flush pt-5">
            <li class="list-group-item list-group-item-action"><a asp-action="OperationalProcess" asp-route-firstDate="@DateTime.Now.ToString("MM.dd.yyyy")" asp-route-secondDate="@DateTime.Now.ToString("MM.dd.yyyy")" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["OperatingProcess"]</a></li>
            @if (User.IsInRole("admin") || User.IsInRole("registrar"))
            {
                <li class="list-group-item list-group-item-action"><a asp-action="IndexOperatingCosts" asp-controller="OperatingActivities" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["OperatingCosts"]</a></li>
            }
        </ul>
    </div>
</div>
