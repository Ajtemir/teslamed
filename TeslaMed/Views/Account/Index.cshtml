@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model List<User>

@{
    ViewData["Title"] = @Localizer["Title"];
}
<div class="container">
    <div class="d-flex justify-content-between">
        <a class="btn btn-primary" asp-action="SettingsTeslaMed">@Localizer["ButtonBack"]</a>
        <a class="btn btn-primary" asp-action="Create">@Localizer["ButtonCreate"]</a>
    </div>
    <h4 class="text-center">@Localizer["UsersList"]</h4>
@if (Model.Count == 0)
{
    <p class="text-center">@Localizer["NullList"]</p>
}
else
{
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-7 col-xl-6 col-xxl-5">
            <table class="table mt-3" style="width: 100%;">
                <thead>
                    <tr>
                        <th scope="col">@Localizer["UserName"]</th>
                        <th scope="col" style="width: 50%;">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Surname @user.Name @user.Patronymic</td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Account" asp-action="Edit" asp-route-id="@user.Id">@Localizer["ButtonEdit"]</a>
                            </td>
                        </tr>
                      }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>


