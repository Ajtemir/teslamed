@model TeslaMed.Models.MainDoctor
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<h2>@Localizer["AddMainDoctor"]</h2>
<div class="container">
<form method="post" asp-controller="News" asp-action="AddMainDoctor" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="input-group mb-3 mt-3">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="file" name="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
            <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <input class="btn btn-primary" id="publishButton" type="submit" value="@Localizer["Create"]" />
</form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}