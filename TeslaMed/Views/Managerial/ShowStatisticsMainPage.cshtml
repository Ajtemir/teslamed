@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="container mt-5">
    <h2 class="text-center">@Localizer["Title"]</h2>
    <div class="mb-5">
        <ul class="list-group list-group-flush ">
            <li class="list-group-item list-group-item-action"><a asp-action="LaboratoryAssistantStatistics" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["LaborantStatistics"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="ArrivalTypeStatistics" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["StatisticsTypeOfArrival"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="FinancialTransactionStatistics" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["StatisticsFinancial"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="PreRegistrationStatistics" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["StatisticsDiagnosticRecords"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="DiagnosticStatistics" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["StatisticsDiagnostic"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="ComparativeIncomeStatistics" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["ComparativeStatisticsRevenues"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="ComparativeStatisticsDiagnostics" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["ComparativeStatisticsDiagnostics"]</a></li>
        </ul>
    </div>
</div>