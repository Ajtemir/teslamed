@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="container mt-5">
    <h2 class="text-center">@Localizer["Title"]</h2>
    <div class="mb-5">
        <ul class="list-group list-group-flush ">
            <li class="list-group-item list-group-item-action"><a asp-action="CashRegisterForACertainPeriodOfTime" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["CertainPeriodTime"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="AccountingForThisMonth" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["CurrentMonth"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="MonthlyCashRegister" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["Monthly"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="AccountingByResearchMethod" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["TypeOfResearch"]</a></li>
            <li class="list-group-item list-group-item-action"><a asp-action="AccountingByCosts" asp-controller="Managerial" class="text-decoration-none text-dark fs-5 fw-semibold">@Localizer["Expense"]</a></li>
        </ul>
    </div>
</div>