@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model List<Inventory>

@{
    ViewData["Title"] = @Localizer["Header"];
}
<div class="container">
    <a class="btn btn-primary" asp-action="ShowInventoryMainPage">@Localizer["ButtonBack"]</a>
    <h2 class="text-center text-primary">@Localizer["Header"]</h2>
    <div class="d-flex justify-content-between">
        <a asp-controller="Inventory" asp-action="Create" title="@Localizer["ButtonCreate"]">
            <i class="bi bi-plus-circle fs-2"></i>
        </a>
        <a class="btn btn-primary">Поиск</a>
    </div>
    
    @if (Model.Count == 0)
    {
        <p class="text-center">@Localizer["NullList"]</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["Unit"]</th>
                    <th>@Localizer["Spend"]</th>
                    <th>@Localizer["TotalAmount"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.InventoryName.Name</td>
                        <td>@i.InventoryName.Unit</td>
                        <td> </td>
                        <td>@i.TotalAmount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
