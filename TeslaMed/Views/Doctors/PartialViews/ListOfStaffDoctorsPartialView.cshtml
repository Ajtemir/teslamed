@using Microsoft.AspNetCore.Mvc.Localization
@using TeslaMed.Models;

@inject IViewLocalizer Localizer
@model List<User>
@if(Model.Count == 0)
{
    <p class="text-center">@Localizer["NullList"]</p>
}
else
{
    <h3 class="text-center">@Localizer["Header"]</h3>
    <table class="table">
        <thead>
            <tr>
                <th>@Localizer["Surname"]</th>
                <th>@Localizer["Name"]</th>
                <th>@Localizer["Patronymic"]</th>
                <th>@Localizer["Specialization"]</th>
                <th>@Localizer["Address"]</th>
                <th>@Localizer["PhoneNumber"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.Surname</td>
                    <td>@d.Name</td>
                    <td>@d.Patronymic</td>
                    <td>
                        @foreach (var item in d.Specializations)
                        {
                            <text>@item.Name</text>
                        } 
                    </td>
                    <td>@d.Address</td>
                    <td>@d.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
}
