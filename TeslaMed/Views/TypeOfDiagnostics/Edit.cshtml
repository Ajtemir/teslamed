@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model TeslaMed.Models.TypeOfDiagnostics

@{
    ViewData["Title"] = @Localizer["Header"];
}

<a class="btn btn-primary" asp-action="Index">@Localizer["ButtonBack"]</a>

<div class="row justify-content-around ms-0 me-0">
    <div class="col col-sm-8 col-md-6 col-lg-5 col-xl-4 col-xxl-3">
        <form asp-action="Edit" method="post">
            <h4 class="text-center">@Localizer["Header"]</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
            <input asp-for="Id" hidden/>            
            <div class="form-group">
                <label asp-for="ResearchMethodId" class="control-label"></label>
                <select asp-for="ResearchMethodId" class="form-select">
                    @foreach (var m in ViewBag.ResearchMethods)
                    {
                        <option value="@m.Id">@m.Name</option>
                    }
                </select>
                <span asp-validation-for="ResearchMethodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-2">
                <button class="btn btn-primary" type="submit">@Localizer["ButtonEdit"]</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}