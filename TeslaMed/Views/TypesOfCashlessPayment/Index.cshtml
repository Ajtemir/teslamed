@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model List<TypeOfCashlessPayment>

@{
    ViewData["Title"] = @Localizer["Header"];
}
<div class="container">
    <div class="d-flex justify-content-between">
        <a class="btn btn-primary" asp-action="SettingsTeslaMed" asp-controller="Account">@Localizer["ButtonBack"]</a>
        <a class="btn btn-primary" asp-action="Create">@Localizer["ButtonCreate"]</a>
    </div>
    <h4 class="text-center">@Localizer["Header"]</h4>
    @if (Model.Count == 0)
    {
        <p class="text-center">@Localizer["NullList"]</p>
    }
    else
    {
        <div class="row justify-content-center me-0">
            <div class="col-12 col-lg-8 col-xl-7 col-xxl-6">
                <table class="table mt-3" style="width: 100%;">
                    <thead>
                        <tr>
                            <th scope="col">@Localizer["Name"]</th>
                            <th scope="col" style="width: 41%;">@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model)
                        {
                            <tr>
                                <td>@t.Name</td>
                                <td>
                                    <a class="btn btn-primary" onclick="delObj(@t.Id)">@Localizer["ButtonDelete"]</a>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@t.Id">@Localizer["ButtonEdit"]</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>



<script>
    function delObj (id) {
        let deleteConfirm = confirm('@Localizer["ConfirmDelete"]');
        if (deleteConfirm) {
            window.location.href = '@Url.Action("Delete", "TypesOfCashlessPayment")?id=' + id;
        }
    };
</script>